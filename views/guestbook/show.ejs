<% include ../layouts/header %>

  <div class="row">
    <div class="small-12 small-centered medium-8 medium-centered large-8 large-centered columns">

    <div class="row">
      
      <div class="large-12 columns">
        <h2><%= post.title %></h2>

        <% if (post.userDemog !== null) { %>
          
          from <strong><%= post.userDemog.firstName %> <%= post.userDemog.lastName %></strong>
        
        <% } %>
          
          on <strong><%= post.createdAt %> </strong>
        
        <div class="panel callout single-post">
          <%= post.content %>

          <ul class="inline-list">
            <li><a href="">Reply</a></li>
            <li><a href="">Share</a></li>
            <li><a href="mailto:<%= post.user.email %>">Email Author</a></li>
          </ul>

          <p>
            <form method="post" action="/guestbook/<%= post.user.id %>/post/<%= post.id %>?_method=DELETE" ><button class="alert expand">delete</button></form>
          </p>

        </div>
        
        <div class="row">
          <div class="large-12 large-centered columns comments">
            
