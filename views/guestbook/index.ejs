<% include ../layouts/header %>

<div class="row">
  
  <div class="small-12 small-centered medium-8 medium-centered large-8 large-centered columns">

    <h1>GUESTBOOK</h1>
    <p>
      Harriet would love everyone – both those attending in person, as well as those who are unable to attend live – to sign the below “guest book” and share with her your memories of how you met, a special time you shared together, or something special you want to say to Harriet.
    </p>
    <p>
      If you want to speak at the celebration, or submit material for the video (or this website!) please contact Aurelia.
    </p>
    <p>
       <a href="mailto:aurelia@powerfullatinas">Aurelia@powerfullatinas.com</a>
    </p>
    <p>
      Thanks in advance!
    </p>

    <a href="/guestbook/<%= user.id %>/new"><button class="success expand">post to guestbook</button></a>

    <hr>



<% postList.forEach( function (post) { %>
  
  <div class="row">
    
    <div class="large-12 columns">
      <h2><a href="/guestbook/posts/<%= post.id %>"><%= post.title %></a></h2>
      <strong>< post.userDemog.firstName > < post.userDemog.lastName ></strong> wants to share:
      
      <div class="panel callout">
        <%= post.content %>

        <ul class="inline-list">
          <li><a href="">Reply</a></li>
          <li><a href="">Share</a></li>
        </ul>

      </div>
      
      <div class="row">
