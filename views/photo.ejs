<!-- views/photo.ejs taken from node-gallery module -->
<% include ./layouts/header2 %>

<div class="row">
  <div class="small-12 columns">

  <% for (var i=0; i<breadcrumb.length; i++) { %>

    <% if (i==breadcrumb.length-1){ %>
      
      <div class="row">
        <div class="text-center">
          <h1>
            <a href="<%= breadcrumb[i].url %>"><%= breadcrumb[i].name %></a>
          </h1>
        </div>    
      </div>

    <% }else{ %>
      <li class="breadcrumbs">
        <a href="<%= breadcrumb[i].url %>"> 
          <%= breadcrumb[i].name %> &raquo; 
        </a>
      </li>
    <% } %>

  <% } %>

  <div class="row">
    <div class="text-center">
      <h1><%= photo.name %></h1>
    </div>    
  </div>

  <img src="/<%= directory %>/<%= photo.path %>" alt="<%= photo.name%>"><br />

  <% if (photo.exif && photo.exif.Description){ %>
    <div class="row">
      <div class="panel"><%= photo.exif.Description%></div>      
    </div>
  <% }else{ %>
    <div class="row">
      <div class="small-12 columns">
        <div class="panel"><%= photo.name%></div>
      </div>
    </div>

  <% } %>


  <% if (photo.exif){ %>
  <section class="info">
    <h2>Info</h2>
    <table>
      <% for (var key in photo.exif){ %>
      <% if (key!="Description"){ %>
      <tr>
        <td>
          <%= key %>
        </td>
        <td>
          <%= photo.exif[key] %>
        </td>
      </tr>
      <% } %>
      <% } %>
    </table>
  </section>
  <% } %>
  
  </div>
</div>
<% include ./layouts/footer %>